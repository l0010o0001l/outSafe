.container
  .row
    .col-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        %h3 Settings
        = devise_error_messages!
        .field{style: 'margin-top: 15px;'}
          .form-group
            = f.label :email, 'email'
            = f.email_field :email, autofocus: true, class: 'form-control'
        .field
          .form-group
            = f.label :password, 'new password'
            = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'leave blank if unchanged'
        .field
          .form-group
            = f.label :password, 'confirm new password'
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'leave blank if unchanged'
        .field
          .form-group
            = f.label :current_password, 'current password'
            = f.password_field :current_password, autocomplete: "off", class: 'form-control'
        .actions
          = f.submit "submit", class: "btn btn-primary"
